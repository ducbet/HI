<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.TreeDetail">

    <ImageView
        android:id="@+id/image_view_tree_image"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/bg_gradient" />

    <TextView
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:layout_marginTop="@dimen/dp_20"
        android:id="@+id/text_view_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Ten cay"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/dp_20">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="left"
            android:text="Tình trạng cây: "
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/image_view_choose"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:onClick="onClick" />
    </LinearLayout>

    <TextView
        android:layout_margin="@dimen/dp_20"
        android:id="@+id/text_view_how_to_water"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="left"
        android:text="Cach tuoi cay: "
        android:textSize="20sp" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:layout_marginLeft="@dimen/dp_8"
            android:id="@+id/edit_text_comment"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/title_comment"/>
        <Button
            android:layout_marginRight="@dimen/dp_8"
            android:id="@+id/button_send_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_send_comment"/>
    </LinearLayout>

</LinearLayout>
